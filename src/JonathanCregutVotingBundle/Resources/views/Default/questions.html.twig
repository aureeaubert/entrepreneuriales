{% extends "JonathanCregutVotingBundle:Default:main_layout.html.twig" %}

{% block insidelayout %}
<div class="panel panel-success">
    <div class="panel-heading">
        <p class="panel-title">
            Ajouter une Question
        </p>
    </div>
    <div class="panel panel-body">
        {{ form_start(form, {'attr' : {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            {{ form_label(form.content, "Question", {'label_attr' : {'class': 'control-label'}}) }}
            {{ form_widget(form.content, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group">
            {{ form_label(form.participants, "Participants", {'label_attr' : {'class': 'control-label'}}) }}
            {{ form_widget(form.participants, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        
        {{ form_widget(form.save, {'label' : "Ajouter la question"}) }}
        
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}